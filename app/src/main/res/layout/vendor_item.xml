<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/vendor_image"
        android:scaleType="centerCrop"
        android:src="@drawable/two"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    </ImageView>
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/vendor_name_txt"
            android:textSize="18dp"
            android:gravity="left"
            android:text="vendor name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1">
        </TextView>

        <TextView
            android:id="@+id/vendor_title_txt"
            android:gravity="left"
            android:text="vendor title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1">
        </TextView>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <RatingBar
                android:theme="@style/RatingBar"
                android:rating="3"
                android:id="@+id/vendor_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:stepSize="0.1"
                android:isIndicator="true" />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/location_iconn"
                android:scaleType="centerInside"
                android:src="@drawable/location_iconn"
                android:layout_width="20dp"
                android:layout_height="20dp">

            </ImageView>

            <TextView
                android:id="@+id/vendor_distance_txt"
                android:text="5.5 kms away"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/location_iconn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>



        </RelativeLayout>

    </LinearLayout>

</LinearLayout>